
<div class="row">
  <div class="col-xs-6">

    <h3 class="gallery-name">{{gallery.name}}</h3>
    <h5 class="text-muted gallery-owner">- by {{gallery.owner.name}}</h4>

    <blockquote>
      <h4 class="gallery-desc">"{{gallery.description}}"</h4>
    </blockquote>
  </div>

  <div class="col-xs-6">
    <h3>Add artwork</h3>
    {{#compare gallery.owner.id "==" user.id}}
      <form action="/images/{{gallery._id}}" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" class="form-control">
        </div>

        <div class="form-group">
          <label for="blurb">Blurb</label>
          <textarea name="blurb" class="form-control"></textarea>
        </div>

        <div class="form-group">
          <label for="file">Choose a file</label>
          <input type="file" id="file" name="file" class="form-control">
        </div>

        <input type="submit" value="Submit" class="btn btn-default">
      </form>
    {{else}}
        <br>
        <h4 class="unauthorised">Uh oh! You are not the owner of this gallery!</h4>

    {{/compare}}
  </div>
</div>

<hr>



    <ul class="image-container">
    {{#each gallery.images}}
      <li class="image-card">
        <span>

        <a href="/images/{{this.id}}">
          <img src="/images/{{this.id}}" alt="image-thumbnail"/>
        </a>

        <p>{{this.title}}</p>
        <p class="text-muted">{{this.blurb}}</p>


        <a href="/images/{{this.id}}/delete" class="delete">Remove</a>
        </span>
      </li>
      {{/each}}
    </ul>






<hr>

<div class="text-center">
  <a href="/galleries/{{gallery._id}}/delete" class="btn-primary">Delete Gallery</a>
</div>

<hr>



