

<h2>{{gallery.name}}</h2>
<p class="text-muted">by {{gallery.owner.name}}</p>
<h4>"{{gallery.description}}"</h4>

<hr>

<h3>Add artwork ðŸŽ¨</h3>
<form action="/images/{{gallery._id}}" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" class="form-control">
  </div>

  <div class="form-group">
    <label for="blurb">Blurb</label>
    <textarea name="blurb" class="form-control"></textarea>
  </div>

  <div class="form-group">
    <label for="file">Choose a file</label>
    <input type="file" id="file" name="file" class="form-control">
  </div>

  <input type="submit" value="Submit" class="btn btn-default">
</form>

<br>

<div class="row">
  {{#each gallery.images}}
    <div class="col-xs-4">
      <a href="/images/{{this.id}}"><img src="/images/{{this.id}}" class="thumbnail" /></a>
      <p>{{this.title}} by {{this.artist.name}}</p>
      <p class="text-muted">{{this.blurb}}</p>
    </div>
  {{/each}}
</div>
