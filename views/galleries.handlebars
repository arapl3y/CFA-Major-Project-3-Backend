<h2>{{title}}</h2>
<div class="row">
{{#each galleries}}

  <div class="col-xs-4">
    <div class="well">
        <h4><a href="/galleries/{{this.slug}}">{{this.name}}</a></h4>
        <p class="text-muted">by {{this.owner.name}}</p>
        <hr>
        <p>{{this.description}}</p>

        {{#if ../user }}
          {{#compare this.owner.id "==" ../user.id }}
            <a href="/galleries/{{this.id}}/edit">Edit</a>
          {{/compare}}
        {{/if}}
    </div>
  </div>
{{/each}}
</div>
